<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/InheritMap</property>
        <property name="hibernate.connection.username">amrat</property>
        <property name="hibernate.connection.password">root@123</property>
        
        <!-- JDBC connection pool settings -->
        <property name="hibernate.connection.pool_size">5</property>
        
        <!-- Dialect for MySQL -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        
        
        <!-- Echo all executed SQL to stdout -->
        <property name="hibernate.show_sql">true</property>
        
        <!-- Drop and re-create the database schema on startup -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        
        <!-- Mapping files -->
       
         <mapping class="com.HibernateMapping.TblPerClassHierchy.Car"/> 
         <mapping class="com.HibernateMapping.TblPerClassHierchy.Sports_Car"/> 
         <mapping class="com.HibernateMapping.TblPerClassHierchy.Taxi_Car"/>  
      <!--    
         <mapping class="com.HibernateMapping.TblPerConcratClass.Employee"/>  
        <mapping class="com.HibernateMapping.TblPerConcratClass.Contract_Employee"/>  
        <mapping class="com.HibernateMapping.TblPerConcratClass.Regular_Employee"/>  -->
        
      <!--   <mapping class="com.HibernateMapping.TablePerSubClass.Person"></mapping>
        <mapping class="com.HibernateMapping.TablePerSubClass.Emp"></mapping>
        <mapping class="com.HibernateMapping.TablePerSubClass.Owner"></mapping> -->
        
        <!-- Add your entity mapping files here -->
        
    </session-factory>
</hibernate-configuration>